{
  "extends": "tslint:recommended",
  "rules": {
    "no-any": true,
    "no-internal-module": true,
    "no-namespace": true,
    "no-reference": false,
    "no-var-requires": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "noSpace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "curly": true,
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": false,
    "no-debugger": true,
    "no-construct": true,
    "no-duplicate-variable": true,
    "no-shadowed-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-invalid-this": false,
    "max-classes-per-file": false,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unused-expression": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "prefer-const": true,
    "ordered-imports": "any",
    "member-ordering": false,
    "radix": true,
    "switch-default": true,
    "triple-equals": true,
    "use-isnan": true,
    "eofline": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "indent": [true, "spaces"],
    "no-require-imports": true,
    "no-trailing-whitespace": true,
    "trailing-comma": true,
    "class-name": true,
    "no-consecutive-blank-lines": true,
    "one-variable-per-declaration": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": true,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
