{
  "name": "dokabenizer",
  "version": "0.1.0",
  "repository": "https://github.com/noonworks/dokabenizer",
  "author": "noonworks <noonworks@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-s clear:js build:prod",
    "build:debug": "webpack --config config/webpack.config.debug.js",
    "build:prod": "webpack --config config/webpack.config.prod.js",
    "clear": "run-p clear:dir clear:js",
    "clear:dir": "rimraf build coverage .nyc_output",
    "clear:js": "rimraf js/bundle.js js/bundle.map",
    "lint": "tslint ts/**/*.ts",
    "test:tsc": "tsc",
    "test:run": "ava build/**/*.test.js",
    "test:cover": "nyc ava build/**/*.test.js",
    "test": "run-s lint test:tsc test:cover"
  },
  "devDependencies": {
    "@types/three": "^0.84.3",
    "ava": "^0.18.2",
    "cross-env": "^3.2.4",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.1.2",
    "rimraf": "^2.6.1",
    "three": "^0.84.0",
    "ts-loader": "^2.0.3",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "webpack": "^2.3.1"
  }
}
